<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PrimaryButton">
        <attr name="loadingColor" format="color" />
        <attr name="loadingWidth" format="dimension" />
        <attr name="loadingPadding" format="dimension" />
    </declare-styleable>

    <attr name="primaryButtonStyle" format="reference" />

    <style name="PrimaryButton.Filled" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_button_filled_text_color</item>
        <item name="backgroundTint">@color/primary_button_filled_background_color</item>
    </style>

    <dimen name="primary_button_loading_width">2dp</dimen>
    <dimen name="primary_button_loading_padding">14dp</dimen>

</resources>